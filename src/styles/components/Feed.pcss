@import '../variables.pcss';

.Feed {
  & .title {
    text-align: center;
    color: var(--blue-dark);
  }

  & .list {
    list-style-type: none;
    margin: 0;
    padding: 0;

    & li {
      border-bottom: 1px solid var(--blue-light);
    }

    & li:first-child {
      border-top: 1px solid var(--blue-light);
    }
  }

  & a {
    padding: 10px;
    display: block;

    &:hover {
      color: var(--orange);
    }
  }

  & .more a {
    text-decoration: underline;
  }
}
