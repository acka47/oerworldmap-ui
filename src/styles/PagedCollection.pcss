@import './Colors.pcss';

.PagedCollection {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;

  & h1 {
    color: color(var(--blue) l(15%));
  }

  & .PagedCollectionHeader {
    display: flex;
    padding: 10px;
    justify-content: space-between;
    align-items: center;
    border-top: 2px solid var(--blue-light);
    margin-top: 5px;
    padding-top: 15px;
  }

  & .counter {
    color: var(--blue--dark);
    font-size: 0.9rem;
  }
}
