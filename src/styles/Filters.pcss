@import './Colors.pcss';

.Filters {
  & .filterSearch {
    display: flex;
    padding-bottom: 15px;
    position: relative;

    & input {
      border-radius: 2px;
      padding: 10px;
      padding-left: 30px;
      flex: 1;
      border: 1px solid var(--blue);
      position: relative;
    }

    &::after {
      font-family: FontAwesome;
      content: "\f002";
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-100%);
      z-index: 5;
      color: var(--blue);
      pointer-events: none;
    }
  }

  & .filterType {
    display: inline-flex;

    & .filterBox {
      display: inline-block;
    }

    & input[type="radio"] {
      display: none;

      &:checked + label {
        color: var(--white);
        background-color: var(--blue-dark);
      }
    }

    & .btn {
      display: inline-block;
      padding: 10px 15px;
      min-width: 40px;
      text-align: center;
      margin-right: 10px;
    }
  }

  & .sortContainer {
    margin-top: 10px;
  }

  & .clearFilter {
    padding-top: 10px;
    text-align: right;
    font-size: 0.8rem;
    border: none;
    background-color: transparent;
    text-decoration: underline;
  }
}
