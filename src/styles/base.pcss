* {
  box-sizing: border-box;
  word-wrap: break-word;
}

body {
  margin: 0;
  padding: 0;
  color: var(--primary-color);
  font-family: 'Source Sans Pro', futura-pt, sans-serif;
  font-size: var(--font-size);
  line-height: 1.4;
  & .small {
    font-size: var(--font-size-small);
  }
  & .large {
    font-size: var(--font-size-large);
  }
}

p {
  margin: var(--p-margin) 0;
  
  &.top-double {
    margin-top: calc(2 * var(--p-margin));
  }

  &.bottom-double {
    margin-bottom: calc(2 * var(--p-margin));
  }
}

h1,
h2,
h3 {
  &:first-child {
    margin-top: 0;
  }
}

h1 {
  font-size: 42px;
  font-weight: 600;
}

a {
  text-decoration: none;
  color: var(--action-color);
}

.container {
  min-height: 100vh;
  display: flex;
  overflow: auto;
  flex-direction: column;

  & .content {
    /* min-height: 100%; */
    flex: 1;
    position: relative;
    overflow: hidden;

    /* overflow: hidden; */

    /* overflow: auto; */
  }
}

/* Forms */

input, textarea, button, select {
  font-family: inherit;
  letter-spacing: inherit;
}

.btn {
  display: inline-block;
  cursor: pointer;
  padding: 6px 12px;
  border-radius: var(--border-radius);
  color: var(--action-color);
  font-size: var(--font-size-small);
  background-color: var(--white);
  border: 1px solid var(--action-color);
  text-decoration: none !important;

  &:focus,
  &:hover {
    color: var(--white);
    background-color: var(--action-color);
  }
  
  &.xl {
    font-size: var(--font-size-xl);
  }

  &.with-bg {
    color: var(--blue-dark);
    background-color: var(--blue-lightest);
    border: none;
  }

  &.expand {
    padding-right: 40px !important;
    position: relative;
    margin-top: 5px;

    &::before {
      font-family: FontAwesome;
      content: "\f078";
      position: absolute;
      top: 50%;
      right: 14px;
      transform: translateY(-50%);
      font-size: 0.8rem;
    }
  }

  &:focus,
  &:hover {
    color: var(--white);
    background-color: var(--blue-dark);
    border-color: #040609;
    outline: 5px auto -webkit-focus-ring-color;
    outline-offset: -2px;
  }

  &.active {
    color: var(--blue-dark);
    background-color: var(--blue-darkest);
    border-color: #172738;
    box-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
  }

  &.clear {
    border: 2px solid var(--blue);
    background-color: var(--white);
    color: var(--blue-dark);
    padding: 6px 15px;
  }
}

input {
  padding: 6px 12px;
  border: 1px solid var(--action-color);
  border-radius: var(--border-radius);
  background: transparent;
  
  &::placeholder {
    color: var(--light-grey);
  }
}

.dropdownToggle {
  & i:first-child {
    padding-right: 10px;
  }
}

.row {
  display: flex;
  justify-content: space-between;
  margin: 0 -10px;

  & .col {
    flex: 1;
    padding: 0 10px;
  }
}

.display-block {
  display: block;
}

.width-100 {
  width: 100%;
}

.distribute-vertical {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.alignRight {
  color: rgb(0, 70, 120);
  text-align: right;
  font-size: 12.8px;
  font-size: 0.8rem;
}

pre {
  white-space: pre-wrap;
}

.Tooltip {
  padding: 10px;
  background-color: #646464;
  border-radius: 2px;
  color: white;
  font-size: 0.9rem;
}

.hidden {
  display: none;
}
